@model Consultorio_de_seguros.Models.Asegurado

@{
    ViewData["Title"] = "Carga Masiva de Asegurados";
}

<h2>Carga Masiva de Asegurados</h2>

<form asp-action="MassiveLoad" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Selecciona un archivo (txt o csv):</label>
        <input type="file" name="file" id="file" class="form-control" accept=".txt,.csv" required />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Cargar</button>
    </div>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
